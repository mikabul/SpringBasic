<?xml version="1.0" encoding="UTF-8"?>
<beans
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
>

	<bean lazy-init="true" class="kr.co.softsoldesk.beans.TestBean" id="obj1" />
	
	<!-- int형 arg -->
	<bean id='obj2' class='kr.co.softsoldesk.beans.TestBean' lazy-init='true'>
		<constructor-arg value='100' type='int'/>
	</bean>
	
	<!-- double형 arg -->
	<bean id='obj3' class='kr.co.softsoldesk.beans.TestBean' lazy-init='true'>
		<constructor-arg value='11.11' type='double'/>
	</bean>
	
	<!-- String형 arg -->
	<bean id='obj4' class='kr.co.softsoldesk.beans.TestBean' lazy-init='true'>
		<constructor-arg value='문자열' />
	</bean>
	
	<bean id='obj5' class='kr.co.softsoldesk.beans.TestBean' lazy-init='true'>
		<constructor-arg value='200' type="int" />
		<constructor-arg value='11.11' type="double" />
		<constructor-arg value='안녕하세요' type="java.lang.String" />
	</bean>
	
	<bean id='obj6' class='kr.co.softsoldesk.beans.TestBean' lazy-init='true'>
		<constructor-arg value='살려주세요' type="java.lang.String" />
		<constructor-arg value='1234' type="int" />
		<constructor-arg value='33.31' type="double" />
	</bean>
	
	<bean id='obj7' class='kr.co.softsoldesk.beans.TestBean' lazy-init='true'>
		<constructor-arg value='살려주세요' type="java.lang.String" index="2"/>
		<constructor-arg value='1234' type="int" index="0"/>
		<constructor-arg value='33.31' type="double" index="1"/>
	</bean>
	
	<bean id='obj8' class='kr.co.softsoldesk.beans.TestBean2' lazy-init='true'>
		<constructor-arg>
			<bean class='kr.co.softsoldesk.beans.DataBean' />
		</constructor-arg>
		<constructor-arg>
			<bean class='kr.co.softsoldesk.beans.DataBean' />
		</constructor-arg>
	</bean>
	
	<!-- 방법2 -->
	<bean id='data_bean' class='kr.co.softsoldesk.beans.DataBean' scope='prototype'/>
	<bean id='obj9' lazy-init="true" class="kr.co.softsoldesk.beans.TestBean2">
		<constructor-arg ref="data_bean"/>
		<constructor-arg ref="data_bean"/>
	</bean>
	
	<!-- 활용 -->
	<bean id='speaker' class='kr.co.softsoldesk.beans.SonySpeaker' scope='prototype'/>
	<bean class='kr.co.softsoldesk.beans.SamsungTV' id='tv' lazy-init='true'>
		<constructor-arg ref='speaker'/>
		<constructor-arg value="2700000" type='int'/>
	</bean>
	
</beans>